{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "GDB debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolderBasename}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "targetArchitecture": "arm",
            "preLaunchTask": "prepdebug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "gdb-multiarch",
            "miDebuggerServerAddress": "kai.local:3000"
        }

    ]
}